% }


  \def\matrix#1{\null\,\vcenter{\normalbaselines\m@th
    \ialign{\hfil$##$\hfil&&\quad\hfil$##$\hfil\crcr
      \mathstrut\crcr\noalign{\kern-0.9\baselineskip}
     #1\crcr\mathstrut\crcr\noalign{\kern-0.9\baselineskip}}}\,}

